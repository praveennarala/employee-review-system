<%- include('navbar'); %>





  <div class="container my-5">
    <div class="row mt-3">
      <div class="col-md-7 m-auto">

        <div class="card card-body">
          <h2 class="text-center">Set reviewers</h2>
          <hr>

          <form method="post" action="/admin/set-Reviewers" autocomplete="off">
            <div class="form-group row">
              <label for="staticEmail" class="col-sm-2 col-form-label">Recipient</label>
              <div class="col-sm-10">
                <select class="form-control" name="Recipient">
                  <option disabled selected>Select Recipient</option>
                  <% for(let i=0; i < employeeList.length; i++){ %>

                    <option value="<%= employeeList[i].id  %>">
                      <%= employeeList[i].name %>
                    </option>

                    <% } %>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputPassword" class="col-sm-2 col-form-label">Reviewer</label>
              <div class="col-sm-10">
                <select class="form-control" name="Reviewer">
                  <option disabled selected>Select Reviewer</option>
                  <% for(let i=0; i < employeeList.length; i++){ %>

                    <option value="<%= employeeList[i].id  %>">
                      <%= employeeList[i].name %>
                    </option>

                    <% } %>
                </select>
              </div>
            </div>
            <div class="text-center">
              <input class="btn btn-dark" type="submit" value="Submit">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>