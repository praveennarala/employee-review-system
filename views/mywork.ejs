<%- include('navbar'); %>




  <% if(recipients.length>0){ %>
    <div class="container my-5">
      <div class="row mt-3">
        <div class="col-md-7 m-auto">

          <div class="card card-body">
            <h2 class="text-center">Review</h2>
            <hr>

            <form method="get" action="/reviews/sendReview" autocomplete="off">
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Recipient</label>
                <div class="col-sm-10">
                  <select class="form-control" name="Recipient" required>
                    <option disabled selected value>Select Recipient</option>
                    <% for(let i=0; i < recipients.length; i++){ %>

                      <option value="<%= recipients[i].id  %>">
                        <%= recipients[i].name %>
                      </option>

                      <% } %>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Review</label>
                <div class="col-sm-10">
                  <textarea class="form-control" name="review" id="review" cols="20" rows="5" required></textarea>
                </div>
              </div>
              <div class="text-center">
                <input class="btn btn-dark" type="submit" value="Submit">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }else{ %>
      <div class="container mt-5 d-flex justify-content-center">

        <h2>No employee available to review.</h2>

      </div>
      <% } %>